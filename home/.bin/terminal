#!/bin/sh
#
# Script que proporciona una interfaz común a todos los programas de
# consola que se ejecutan en las X.
#
# Variables por cada comando:
#	
#	EXEC -> Comando a ejecutar
#	TITLE -> Título de la ventana y nombre del recurso
#	GE0 -> Geometría de la ventana
#	FONT -> Fuente a utilizar
#	COLOR -> Color de la fuente

# Personalización de comandos

if [ $# -ne 0 ]
then
	case "$1" in
		iptraf) 
			EXEC="sudo /usr/sbin/iptraf"
			TITLE="iptraf"
			GEO="90x40"
			FONT="noxis"
			;;
		mldonkey)
			EXEC="mldonkey -stdout -verbosity verb"
			TITLE="mldonkey"
			COLOR="SteelBlue4"
			;;
		netstat)
			EXEC="sudo /usr/bin/watch -n 5 netstat -tu"
			TITLE="netstat"
			GEO="90x30"
			FONT="smooth"
			;;
		netmasq)
			EXEC="sudo /usr/bin/watch -n 5 netstat -tM"
			TITLE="Conexiones_IP_Masquerade"
			GEO="90x30"
			FONT="smooth"
			;;
		slrn)
			EXEC="news"
			TITLE="slrn"
			GEO="100x50"
			;;
		lftp)
			EXEC="lftp"
			TITLE="lftp"
			GEO="80x25"
			COLOR="SlateGray3"
			;;
		mutt)
			EXEC="mutt"
			TITLE="mutt"
			GEO="90x30"
			;;
		log)
			EXEC="colorlog /var/log/syslog"
			TITLE="Log"
			GEO="130x22-10+30"
			;;
		top)
			EXEC="htop"
			TITLE="htop"
			;;
		weechat)
			EXEC="weechat-curses"
			TITLE="weechat"
			;;
		*)
			EXEC=$1
			TITLE=$1
			;;
	esac
else
	TITLE="Terminal"
fi

# Definición de la sintaxis del programa de terminal a utilizar
# 
# TERMINAL -> Nombre y parámetros del título.
# TERMEXE -> Opción de ejecución de comando.
# TERMGEO -> Opción de geometria.
# TERMFUE -> Opción de fuente.
# TERMCOL -> Opción del color de la fuente.

TERMINAL="urxvt -title $TITLE"
TERMEXEC="-e"
TERMGEO="-g"
TERMFONT="-letsp 0 -fn"
TERMCOLOR="-fg"

# Comprobación de las variables

if [ "$EXEC" != "" ] ; then EXEC="$TERMEXEC $EXEC" ; fi
if [ "$GEO" != "" ] ; then GEO="$TERMGEO $GEO" ; fi
if [ "$FONT" != "" ] ; then FONT="$TERMFONT $FONT" ; fi
if [ "$COLOR" != "" ] ; then COLOR="$TERMCOLOR $COLOR" ; fi

if [ $# -gt 1 ] ; then PARAM="$2 $3 $4 $5 $6 $7 $8 $9";	fi

# Construye la línea de comando y la ejecuta
EXECTERM="$TERMINAL $THEME $FONT $COLOR $EXEC $PARAM"

#echo $EXECTERM

`$EXECTERM` &
