#!/bin/bash

# lockscreen script using ffmpeg and i3lock-color

TMPBG=/tmp/screen.png
LOCK=$HOME/.config/lockscreen/lock.png
RES=$(xrandr | grep "current" | awk '{print $8a"x"$10a}' | sed 's/,$//')
RESW=$(xrandr | grep "current" | awk '{print $8a}' | sed 's/,$//')
if [ "$RESW" != 1600 ]; then
	ffmpeg -f x11grab -video_size $RES -y -i $DISPLAY -i $LOCK -filter_complex "smartblur=5:1,hue=s=0.75,overlay=($RESW-overlay_w)/2:(1080-overlay_h)/3" -vframes 1 $TMPBG
else
	ffmpeg -f x11grab -video_size $RES -y -i $DISPLAY -i $LOCK -filter_complex "smartblur=5:1,hue=s=0.75,overlay=(main_w-overlay_w)/2:(main_h-overlay_h)/3" -vframes 1 $TMPBG
fi
i3lock -S=0 -n -u -i $TMPBG --time-pos='x+60:h-135' --date-pos='tx:h-75' --clock --time-str="%H:%M" --date-align 1 --date-str "%A, %B %d" --time-align=1 --date-align=1 --time-font="Source Sans Pro SemiBold" --time-size=96 --date-font="Source Sans Pro Light" --date-size=48 --time-color=ac4142ff --date-color=ac4142ff
rm $TMPBG
